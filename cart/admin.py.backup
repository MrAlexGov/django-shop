"""
Административная панель для приложения cart
"""

from django.contrib import admin
from django.utils.html import format_html
from django.urls import reverse
from django.utils.safestring import mark_safe
from .models import Cart, CartItem, RecentlyViewed


@admin.register(Cart)
class CartAdmin(admin.ModelAdmin):
    """
    Административная панель для модели Cart
    """
    list_display = (
        'user', 'session_key', 'items_count', 
        'total_price', 'total_discount', 'final_price',
        'is_active', 'delivery_cost', 'updated_at'
    )
    list_filter = (
        'is_active', 'created_at', 'updated_at'
    )
    search_fields = (
        'user__username', 'user__first_name', 'user__last_name',
        'session_key'
    )
    readonly_fields = (
        'created_at', 'updated_at', 'items_count',
        'total_quantity', 'discount_amount', 'delivery_cost', 'final_price',
        'last_activity'
    )
    
    fieldsets = (
        (None, {
            'fields': ('user', 'session_key', 'is_active')
        }),
        ('Промокоды и скидки', {
            'fields': ('applied_discount', 'discount_amount')
        }),
        ('Расчет стоимости', {
            'fields': (
                'total_quantity', 'discount_amount',
                'delivery_cost', 'final_price'
            ),
            'classes': ('collapse',)
        }),
        ('Метаданные', {
            'fields': ('created_at', 'updated_at', 'last_activity'),
            'classes': ('collapse',)
        }),
    )
    
    def get_queryset(self, request):
        qs = super().get_queryset(request)
        return qs.select_related('user')
    
    def get_user_info(self, obj):
        if obj.user:
            return f"{obj.user.get_full_name()} ({obj.user.username})"
        return f"Анонимная корзина"
    get_user_info.short_description = 'Пользователь'


@admin.register(CartItem)
class CartItemAdmin(admin.ModelAdmin):
    """
    Административная панель для модели CartItem
    """
    list_display = (
        'cart', 'product', 'quantity', 
        'unit_price', 'total_price', 'added_at'
    )
    list_filter = ('added_at',)
    search_fields = (
        'cart__user__username', 'cart__session_key',
        'product__name', 'product__sku'
    )
    readonly_fields = (
        'total_price', 'added_at'
    )
    
    def get_queryset(self, request):
        qs = super().get_queryset(request)
        return qs.select_related('cart', 'cart__user', 'product')


@admin.register(RecentlyViewed)
class RecentlyViewedAdmin(admin.ModelAdmin):
    """
    Административная панель для модели RecentlyViewed
    """
    list_display = (
        'user', 'product', 'viewed_at'
    )
    list_filter = ('viewed_at',)
    search_fields = (
        'user__username', 'user__first_name', 'user__last_name',
        'product__name', 'product__sku'
    )
    
    def get_queryset(self, request):
        qs = super().get_queryset(request)
        return qs.select_related('user', 'product')


# Действия для массовых операций с корзинами
class CartItemInline(admin.TabularInline):
    """
    Встроенная админка для товаров в корзине
    """
    model = CartItem
    extra = 0
    readonly_fields = ('total_price', 'added_at')
    autocomplete_fields = ('product',)
    
    def get_queryset(self, request):
        qs = super().get_queryset(request)
        return qs.select_related('product')


# Расширенная админка для Cart с встроенными товарами
class CartAdminExtended(CartAdmin):
    """
    Расширенная админка для корзин с встроенными товарами
    """
    inlines = [CartItemInline]
    
    actions = ['delete_empty_carts']
    
    def delete_empty_carts(self, request, queryset):
        """Удалить пустые корзины"""
        empty_carts = queryset.filter(items__isnull=True)
        count = empty_carts.count()
        empty_carts.delete()
        self.message_user(request, f'Удалено {count} пустых корзин.')
    delete_empty_carts.short_description = 'Удалить пустые корзины'


# Перерегистрируем Cart с расширенной админкой
admin.site.unregister(Cart)
admin.site.register(Cart, CartAdminExtended)


# Настройка заголовков админки
admin.site.site_header = "PhoneShop - Административная панель"
admin.site.site_title = "PhoneShop Admin"
admin.site.index_title = "Добро пожаловать в административную панель PhoneShop"

"""
Административная панель для приложения accounts
"""

from django.contrib import admin
from django.contrib.auth.admin import UserAdmin as BaseUserAdmin
from django.utils.html import format_html
from django.urls import reverse
from django.utils.safestring import mark_safe
from .models import User, UserProfile, Address, Wishlist, CompareList, DiscountCode, UserDiscount


@admin.register(User)
class UserAdmin(BaseUserAdmin):
    """
    Административная панель для модели User
    """
    list_display = (
        'username', 'get_full_name', 'email', 'phone', 
        'is_active', 'is_staff', 'is_subscribed',
        'bonus_points', 'total_spent', 'date_joined'
    )
    list_filter = (
        'is_active', 'is_staff', 'is_superuser', 
        'is_subscribed', 'preferred_language', 'date_joined'
    )
    search_fields = ('username', 'first_name', 'last_name', 'email', 'phone')
    readonly_fields = (
        'date_joined', 'last_login', 'date_of_birth', 
        'bonus_points', 'total_spent'
    )
    fieldsets = (
        (None, {'fields': ('username', 'password')}),
        ('Личная информация', {
            'fields': (
                'first_name', 'last_name', 'email', 
                'phone', 'date_of_birth'
            )
        }),
        ('Права доступа', {
            'fields': (
                'is_active', 'is_staff', 'is_superuser',
                'is_subscribed', 'preferred_language'
            )
        }),
        ('Бонусная система', {
            'fields': ('bonus_points', 'total_spent'),
            'classes': ('wide',)
        }),
        ('Важные даты', {
            'fields': ('last_login', 'date_joined'),
            'classes': ('collapse',)
        }),
    )
    
    def get_full_name(self, obj):
        return obj.get_full_name()
    get_full_name.short_description = 'Полное имя'
    
    def bonus_points(self, obj):
        return f"{obj.bonus_points} баллов"
    bonus_points.short_description = 'Бонусные баллы'
    
    def total_spent(self, obj):
        return f"{obj.total_spent} ₽"
    total_spent.short_description = 'Всего потрачено'


